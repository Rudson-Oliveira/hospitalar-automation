{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd visual && npm install && npx playwright install && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd visual && npm start",
    "restartPolicyMaxRetries": 3,
    "restartPolicyType": "on_failure"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "$PORT"
  }
}
