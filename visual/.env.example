# ============================================
# CONFIGURAÇÃO DO SISTEMA HOSPITALAR
# ============================================

# URL do sistema hospitalar
HOSPITAL_URL=https://dev.hospitalarsaude.app.br

# Credenciais do usuário
HOSPITAL_USER=seu_email@exemplo.com
HOSPITAL_PASS=sua_senha_aqui

# Modo visual (false = ver navegador, true = esconder)
HEADLESS=false

# ============================================
# CONFIGURAÇÃO DO AGENTE AUTÔNOMO
# ============================================

# Porta do servidor
PORT=3000

# OpenAI API (opcional, para NLP avançado)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# URLs do sistema de compras
PROCUREMENT_URL=https://dev.hospitalarsaude.app.br/compras/novo
DEMANDS_URL=https://dev.hospitalarsaude.app.br/demandas
REPORTS_URL=https://dev.hospitalarsaude.app.br/relatorios

# Credenciais de procurement (se diferentes)
PROCUREMENT_USERNAME=admin
PROCUREMENT_PASSWORD=password

# Configurações do navegador
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Logging
LOG_LEVEL=info
NODE_ENV=development
